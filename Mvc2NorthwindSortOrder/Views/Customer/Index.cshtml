@model Mvc2NorthwindSortOrder.ViewModels.CustomerListViewModel

@{
    ViewBag.Title = "Customers";
    Layout = "_Layout";
}

<h2>Suppliers</h2>
<hr />
<!-- Search form -->
<h3>Customers</h3>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Company</th>
            <th scope="col">City</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <th scope="row">@item.CustomerId</th>
                <td>@item.CompanyName</td>
                <td>@item.City</td>
                <td><a asp-route-id="@item.CustomerId" asp-route-action="Edit">Edit</a></td>
            </tr>
        }
    </tbody>
</table>

